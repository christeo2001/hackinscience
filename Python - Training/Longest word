## Print the longest word in a given text

def longest_word(text): 
    longest = ''
    splitted = text.split()
    for words in splitted:
        if len(words) > len(longest):
            longest = words
            
    return longest        
        
if __name__ == "__main__":
    print(longest_word("We want a SHRUBBERY"))
## SHRUBBERY
